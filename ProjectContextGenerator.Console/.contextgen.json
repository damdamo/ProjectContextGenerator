{
  "version": 1,
  "root": ".",
  "maxDepth": 4,
  "include": [ "**/*" ],
  "exclude": [ "**/bin/**", "**/obj/**", ".git/" ],
  "gitIgnore": "RootOnly",
  "sortDirectoriesFirst": true,
  "collapseSingleChildDirectories": true,

  "content": {
    "enabled": false,
    "indentDepth": 1,
    "tabWidth": 4,
    "detectTabWidth": true,
    "maxLinesPerFile": 300,
    "showLineNumbers": false,
    "contextPadding": 1
  },

  "history": {
    "enabled": false,
    "last": 10,
    "maxBodyLines": 6,
    "detail": "TitlesOnly",
    "includeMerges": false
  },

  "profiles": {
    "tree-only": {
      "content": { "enabled": false },
      "history": { "enabled": false }
    },

    "directories-only": {
      "directoriesOnly": true,
      "content": { "enabled": false },
      "history": { "enabled": false }
    },

    "readme-focus": {
      "content": {
        "enabled": true,
        "include": [ "README.md" ],
        "indentDepth": -1
      },
      "history": { "enabled": false }
    },

    "csharp-essential": {
      "exclude": [ "**/bin/**", "**/obj/**", ".git/" ],
      "content": {
        "enabled": true,
        "include": [ "README.md", "*.csproj" ],
        "indentDepth": 1,
        "contextPadding": 1
      },
      "history": { "enabled": true }
    },

    "configs-and-docs": {
      "include": [ "**/*.md", "**/*.json", "**/*.yml", "**/.editorconfig", "**/.gitignore" ],
      "exclude": [ "**/bin/**", "**/obj/**", ".git/" ],
      "content": {
        "enabled": true,
        "include": [ "**/*.md", "**/*.json", "**/*.yml", "**/.editorconfig", "**/.gitignore" ],
        "indentDepth": -1,
        "maxLinesPerFile": 200
      },
      "history": { "enabled": false }
    },

    "history-title-only": {
      "history": {
        "enabled": true,
        "last": 20,
        "maxBodyLines": 0,
        "detail": "TitlesOnly",
        "includeMerges": false
      }
    },

    "history-detailed": {
      "history": {
        "enabled": true,
        "last": 20,
        "maxBodyLines": 6,
        "detail": "TitleAndBody",
        "includeMerges": false
      }
    },

    "test-oriented": {
      "include": [
        "**/*.Tests/**"
      ],
      "content": {
        "enabled": true,
        "include": ["*.cs"]
      }
    }
  }
}