{
  "version": 1,
  "root": ".",
  "maxDepth": 3,
  "exclude": [
    "bin/",
    "obj/",
    ".git/",
    "node_modules/",
    ".github"
  ],
  "gitIgnore": "Nested",
  "directoriesOnly": false,

  "content": {
    "enabled": false,
    "indentDepth": 1,
    "tabWidth": 2,
    "detectTabWidth": true,
    "maxLinesPerFile": 300,
    "showLineNumbers": false,
    "contextPadding": 2,
    "maxFiles": 100
  },

  "history": {
    "enabled": true,
    "last": 20,
    "maxBodyLines": 6,
    "detail": "TitlesOnly",
    "includeMerges": false
  },

  "profiles": {
    "fast": {
      "maxDepth": 3,
      "directoriesOnly": true,
      "content": {
        "enabled": false
      },
      "history": {
        "enabled": false
      }
    },
    "full": {
      "maxDepth": -1,
      "collapseSingleChildDirectories": false,
      "history": {
        "detail": "TitleAndBody"
      },
      "content": {
        "enabled": true,
        "indentDepth": 1
      }
    },
    "csharp-essential": {
      "include": [ "README.md", "**/*.csproj" ],
      "content": {
        "enabled": true,
        "indentDepth": -1,
        "maxLinesPerFile": -1
      },
      "history": {
        "detail": "TitleAndBody"
      }
    },
    "csharp-tests": {
      "include": [ "*Tests/" ],
      "content": {
        "enabled": true,
        "indentDepth": 1
      }
    }
  }
}